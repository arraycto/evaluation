<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

    <diskStore path="java.io.tmpdir/academical"/>
    <defaultCache
            maxElementsInMemory="1000"
            timeToIdleSeconds="604800"
            timeToLiveSeconds="604800"
            maxElementsOnDisk="10000"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </defaultCache>
    <cache name="currentAcademicYear"
           maxElementsInMemory="10"
           timeToIdleSeconds="604800"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="allAcademicYear" maxElementsInMemory="50"
           timeToIdleSeconds="604800"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="acaAcademicYearById" maxElementsInMemory="10"
           timeToIdleSeconds="604800"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="currentTerm" maxElementsInMemory="5"
           timeToIdleSeconds="604800"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>
</ehcache>